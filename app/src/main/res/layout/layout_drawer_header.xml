<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/nav_drawer_cover"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="@dimen/iv_user_profile_size"
            android:layout_height="@dimen/iv_user_profile_size"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_user_profile"
            android:padding="@dimen/iv_user_profile_padding"
            android:src="@drawable/ic_camera_black_24dp"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_user_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/app_name"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</RelativeLayout>